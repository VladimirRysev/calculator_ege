@model Calculator_ege_bu.Models.Accaunt.CreateUserViewModel

@{
    ViewData["Title"] = "Новый пользователь";
}

<h4>Новый пользователь</h4>
<hr />
<div class="row">
    <div>
        <form action="@Url.Action("Create")" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            <div class="row">
                <div class="col">@Html.EditorFor(m => m.Name)</div>
            </div>
            <div class="row">
                <div class="col-sm-6">@Html.EditorFor(m => m.Password)</div>
                <div class="col-sm-6">@Html.EditorFor(m => m.ConfirmPassword)</div>
            </div>
            <div class="row">
                <div class="col-sm-6">@Html.EditorFor(m => m.Role)</div>
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Создать</button>
                <a class="btn btn-secondary" href="@Url.Action("Index")">Назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
